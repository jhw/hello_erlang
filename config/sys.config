%% -*- mode: erlang -*-
[{hello_erlang, [{port, 8080}]},
 {lager, [{error_logger_hwm, 50},
	  {handlers, [{lager_file_backend, [{file, "log/debug.log"},
					    {level, debug},
					    {size, 10000000},
					    {date, ""},
					    {count, 5}]},
		      {lager_file_backend, [{file, "log/info.log"},
					    {level, info},
					    {size, 10000000},
					    {date, ""},
					    {count, 10}]},
		      {lager_file_backend, [{file, "log/warning.log"},
					    {level, warning},
					    {size, 10000000},
					    {date, ""},
					    {count, 10}]},
		      {lager_file_backend, [{file, "log/error.log"},
					    {level, error},
					    {size, 10000000},
					    {date, ""},
					    {count, 10}]}]},
	  {crash_log, "log/crash.log"}]},
 {sasl, [{sasl_error_logger, {file,"log/sasl.log"}}]}].
